<h2><%= 'please fill it up' %></h2>

<%= form_for(@restaurant) do |f| %>
 <div class="form-group">
  <%= f.label :name %>
</div>
   <div class="form-group">
  <%= f.text_field :name %>
</div>
   <div class="form-group">
  <%= f.label :address %>
</div>
   <div class="form-group">
  <%= f.text_field :address %>
</div>
   <div class="form-group">
  <%= f.label :phone_number %>
</div>
   <div class="form-group">
  <%= f.text_field :phone_number %>
  </div>
 <div class="form-group">
  <%= f.label :category %>
</div>
   <div class="form-group">
  <%= f.text_field :category %>
  </div>
  <%= f.submit "add restaurant", class: "btn btn-primary" %>
<% end %>
